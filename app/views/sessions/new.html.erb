<div class="field_image">
  <p id=”alert”><%= alert %></p>
  <p class="h4 text-center">Sign in the Novitition App</p>
  <div class="row justify-content-center">
    <%= simple_form_for :sessions, url: sessions_path do |f| %>
      <div class="form-group col text-center">
        <%= f.input :email, required: false, label: 'Email Address',placeholder: 'Email Address' %>
      </div>
      <div class="form-group col text-center">
        <%= f.input :password, required: false, label: 'Password', placeholder: 'Password' %>
      </div>
      <div class="form-group col text-center">
        <%= f.submit "Login", class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
