<div class="field_image">
  <div  class="row justify-content-center align-items-center h-50">
    <div class="col-md-2">
        <div class="col-md-12">
          <%= simple_form_for :sessions, url: sessions_path, html: {id: "login-form", class: "form"} do |f| %>
            <h3 class="text-center text-light">Login</h3>
            <div class="form-group">
              <%= f.label :email, required: false, class: "text-light" %>
              <%= f.text_field :email, placeholder: 'Email Address', class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, required: false, class: "text-light" %>
              <%= f.text_field :password, placeholder: 'Password', class: "form-control" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "Login", class: "btn btn-secondary btn-sm" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>