<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>First team</th>
      <th>Second team</th>
      <th>Match date</th>
      <th>Location</th>
      <th>Score first team</th>
      <th>Score second team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.first_team %></td>
        <td><%= game.second_team %></td>
        <td><%= game.match_date %></td>
        <td><%= game.location %></td>
        <td><%= game.score_first_team %></td>
        <td><%= game.score_second_team %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

