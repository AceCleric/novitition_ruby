<%= simple_form_for([@competition, @game]) do |f| %>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.association :first_team, collection: @competition.teams.map{ |team| [team.name, team.id, {name: team.name.downcase}] }, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.association :second_team, collection: @competition.teams.map{ |team| [team.name, team.id, {name: team.name.downcase}] }, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :match_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :location, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :prediction_prize, class: "form-control" %>
    </div>
  </div>

  <%= f.input :competition_id, as: :hidden, input_html: { value: @competition.id } %>

  <div class="form-group row">
    <div class="col-lg-9 text-center">
     <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>