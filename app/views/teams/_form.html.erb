<%= simple_form_for([@competition, @team]) do |f| %>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :country, as: :string, class: "form-control"%>
    </div>
  </div>

  <%= f.input :competition_id, as: :hidden, input_html: { value: @competition.id } %>

  <div class="form-group row">
    <div class="col-lg-9 text-center">
     <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>