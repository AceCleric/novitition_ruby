<table
  class="table table-striped table-dark"
  data-toggle="table" 
  data-buttons-class="primary">
  <thead>
    <tr class="tr-class-1">
      <th class="text-center" colspan="3">Teams</th>
    </tr>
    <tr class="tr-class-1 text-center">
      <th data-field="name">Name</th>
      <th data-field="country">Country</th>
      <% unless disable_competitions %>
        <th data-field="competition">Competition</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% teams.map do |team| %>
      <tr id="tr-id-1" class="tr-class-1 text-center">
        <td data-value="name"><%= team.name %></td>
        <td data-text="country"><%= team.country  %></td>
        <% unless disable_competitions %>
          <td data-i18n="competition"><%= team.competition.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
