<%= simple_form_for([@user, @prediction]) do |f| %>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.association :team, collection: @playing_teams.map{ |team| [team.name, team.id, {name: team.name.downcase}] } %>
    </div>
  </div>

  <div class="form-check row">
    <div class="col-lg-9">
      <%= f.input :will_win, class: "form-check-input" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-9">
      <%= f.input :points %>
    </div>
  </div>

  <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
  <%= f.input :game_id, as: :hidden, input_html: { value: @game.id } %>

  <div class="form-group row">
    <div class="col-lg-9 text-center" >
     <%= f.button :submit, class: "btn btn-primary text-center" %>
    </div>
  </div>
<% end %>