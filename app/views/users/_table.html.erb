<table
  class="table table-striped table-dark"
  data-toggle="table" 
  data-buttons-class="primary">
  <thead>
    <tr class="tr-class-1">
      <th class="text-center" colspan="3">Employees</th>
    </tr>
    <tr class="tr-class-1 text-center">
      <th data-field="name">name</th>
      <th data-field="email">email</th>
      <th data-field="points">points</th>
    </tr>
  </thead>
  <tbody>
    <% users.map do |user| %>
      <tr id="tr-id-1" class="tr-class-1 text-center">
        <td data-value="name"><%= user.name %></td>
        <td data-text="email"><%= user.email  %></td>
        <td data-text="points"><%= user.wallet.credit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
