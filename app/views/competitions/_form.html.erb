<%= simple_form_for(@competition) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" style="margin-left: 2em;">
    <%= f.association :sport, collection: Sport.all.map{ |sport| [sport.name, sport.id, {name: sport.name.downcase}] } %>
  </div>

  <div class="form-inputs" style="margin-left: 2em;">
    <%= f.input :name %>
  </div>

  <div class="form-inputs" style="margin-left: 2em;">
    <%= f.input :nationality %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>