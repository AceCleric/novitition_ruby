<table
  class="table table-striped table-dark"
  data-toggle="table" 
  data-buttons-class="primary">
  <thead>
    <tr class="tr-class-1">
      <th class="text-center" colspan="4">Competitions</th>
    </tr>
    <tr class="tr-class-2">
      <th data-field="name">Name</th>
      <th data-field="sport">Sport</th>
      <th data-field="nationality">Nationality</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% competitions.map do |competition| %>
      <tr id="tr-id-1" class="tr-class-1">
        <td><%= competition.name %></td>
        <td><%= competition.sport.name %></td>
        <td><%= competition.nationality %></td>
        <td class="text-center">
          <%= link_to "Show", competition_path(competition.id), data: { turbolinks: false } %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
