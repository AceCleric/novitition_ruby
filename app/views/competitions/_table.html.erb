<table
  class="table-striped table-dark"
  data-toggle="table" 
  data-buttons-class="primary">
  <thead>
    <tr class="tr-class-1">
      <th colspan="3">All Competitions</th>
    </tr>
    <tr class="tr-class-2">
      <th data-field="name">Name</th>
      <th data-field="sport">Sport</th>
      <th data-field="nationality">Nationality</th>
    </tr>
  </thead>
  <tbody>
    <% competitions.map do |competition| %>
      <tr id="tr-id-1" class="tr-class-1">
        <td data-value="team1"><%= competition.name %></td>
        <td data-text="team2"><%= competition.sport.name %></td>
        <td data-i18n="location"><%= competition.nationality %></td>
      </tr>
    <% end %>
  </tbody>
</table>
