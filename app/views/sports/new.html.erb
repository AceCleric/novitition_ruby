<% tab "competitions" %>

<div class="basketball_field_image">
  <div  class="row justify-content-center align-items-center h-50">
    <div class="card bg-dark col-lg-7 order-lg-2 mb-4 mt-4 no-float">
      <div class="card-header">
        <div class="row">
          <div class="col-md-4">
            <%= link_to 'Back', new_competition_path, class: "btn btn-warning", data: { turbolinks: false } %>
          </div>
          <div class="col-md-8">
            <h1>Add a new sport</h1>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= render 'form', sport: @sport %>
      </div>
    </div>
  </div>
</div>

